server {
    listen 80;
    server_name localhost;
    
    # Update root path - adjust this based on where your index.php is located
    # Option 1: If index.php is in ogani-master-templates/
    root /var/www/myphpapp;
    
    # Option 2: If you want root directory, uncomment this:
    # root /var/www/myphpapp;
    
    index index.php index.html index.htm;

    access_log /var/log/nginx/myphpapp_access.log;
    error_log /var/log/nginx/myphpapp_error.log;

    # Gzip compression
    gzip on;
    gzip_types text/css application/javascript image/svg+xml text/html application/json;
    gzip_min_length 256;

    # Main location block - redirect root to login page
    location = / {
        return 301 /pages/login.php;
    }
    
    location / {
        try_files $uri $uri/ =404;
    }

    # PHP processing
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass php:9000;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
        include fastcgi_params;
        
        # Increase timeout for slow queries
        fastcgi_read_timeout 300;
    }

    # Static assets - multiple possible locations
    location /assets/ {
        alias /var/www/myphpapp/assets/;
        expires 30d;
        access_log off;
    }
    
    location /css/ {
        expires 30d;
        access_log off;
    }
    
    location /js/ {
        expires 30d;
        access_log off;
    }
    
    location /img/ {
        expires 30d;
        access_log off;
    }

    # Cache static files
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 30d;
        access_log off;
        add_header Cache-Control "public, immutable";
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Deny access to sensitive files
    location ~* \.(env|git|gitignore|htaccess)$ {
        deny all;
        access_log off;
        log_not_found off;
    }
}